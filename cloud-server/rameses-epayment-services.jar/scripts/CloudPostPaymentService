import com.rameses.annotations.*;
import com.rameses.webapi.common.APIException;

class CloudPostPaymentService {
	
	@Service(dynamic=true) 
	def remoteSvc;

	@DataContext('paymentorder')
	def po_db;

	@ProxyMethod 
	public def postPayment( params) {
		//update the payment order here
		println "UPDATING PAYMENT IN SERVER ---->" + params;
		def orgcode = params.orgcode;
		def svc = remoteSvc.lookup( orgcode + ":EPaymentService", "remote-script-mq" );
		svc.postPayment( params );
	} 



}